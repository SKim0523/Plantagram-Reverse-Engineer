<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs')%>
    <%- include('../partials/nav.ejs')%>

        <div class="polaroid">
            <div class="selected-post-img">
                <img src="<%=post.image%>" alt="<%=post.name %>"/>
            </div>
            <div>
                <h4><%=post.caption%></h4>
            </div>
            <div>
                <h4><%=post.location%></h4>
            </div>
            <div class="btn-set">
                <a class="create-button" href="/posts/edit/<%= post._id %>">Edit Post</a>
                <form action="/posts/<%= post._id %>?_method=DELETE" method="POST">
                <input class="delete-button" type="submit" value="Delete Post" />
            </form>
            </div>
        </div>
</html> 